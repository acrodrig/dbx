{
  "fmt": {
    "lineWidth": 180,
    "include": ["src/", "test/"]
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1",
    "@std/collections": "jsr:@std/collections@^1",
    "@std/fmt": "jsr:@std/fmt@^1",
    "@std/log": "jsr:@std/log@^0",
    "schema": "npm:@types/json-schema/7.0.15",
    "mysql": "https://deno.land/x/mysql@v2.12.1/mod.ts",
    "postgres": "https://deno.land/x/postgres@v0.19.3/mod.ts",
    "sqlite": "https://deno.land/x/sqlite@v3.9.1/mod.ts",
    "mysql2": "npm:mysql2@^3.11/promise"
  },
  "lock": false,
  "tasks": {
    "check": "deno check **/*.ts && deno fmt --check",
    "lint": "deno lint src test",
    "release": "release",
    "test": "deno test -A",
    "test-mysql": "./test/test-mysql.sh",
    "test-postgres": "./test/test-postgres.sh"
  }
}
