{
  "fmt": {
    "lineWidth": 180,
    "include": ["src/", "test/"]
  },
  "imports": {
    "mysql/": "https://deno.land/x/mysql@v2.12.0/",
    "postgres/": "https://deno.land/x/postgres@v0.17.0/",
    "sqlite/": "https://deno.land/x/sqlite@v3.8/",
    "std/": "https://deno.land/std@0.201.0/"
  },
  "tasks": {
    "check": "deno check **/*.ts && deno fmt --check",
    "lint": "deno lint src test",
    "release": "release",
    "test": "deno test -A",
    "test-mysql": "./test-mysql.sh",
    "test-postgres": "./test-postgres.sh"
  }
}
